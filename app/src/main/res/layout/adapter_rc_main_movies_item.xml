<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/mainMoviesImgHolder"
        android:layout_width="300dp"
        android:layout_height="165dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        
        <ImageView
            android:id="@+id/mainMoviesImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/mainMoviesJenre"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Телехикая"
            android:textColor="@color/white"
            android:background="@drawable/bck_jenre_shape"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textSize="12sp"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/mainMoviesTitle"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Қызғалдақтар мекені"
        app:layout_constraintStart_toStartOf="@id/mainMoviesImgHolder"
        app:layout_constraintEnd_toEndOf="@id/mainMoviesImgHolder"
        app:layout_constraintTop_toBottomOf="@id/mainMoviesImgHolder"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/grey_900"/>
    
    <TextView
        android:id="@+id/mainMoviesDescription"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Шытырман оқиғалы мультсериал Елбасының «Ұлы даланың жеті қыры» бағдарламасы аясында жүз..."
        app:layout_constraintStart_toStartOf="@id/mainMoviesTitle"
        app:layout_constraintEnd_toEndOf="@id/mainMoviesTitle"
        app:layout_constraintTop_toBottomOf="@id/mainMoviesTitle"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/grey_400"/>
</androidx.constraintlayout.widget.ConstraintLayout>

