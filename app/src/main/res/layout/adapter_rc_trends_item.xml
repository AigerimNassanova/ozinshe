<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="115dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="8dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/trendsImgHolder"
        android:layout_width="115dp"
        android:layout_height="165dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/trendsImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/trendsTitle"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Айдар"
        app:layout_constraintStart_toStartOf="@id/trendsImgHolder"
        app:layout_constraintEnd_toEndOf="@id/trendsImgHolder"
        app:layout_constraintTop_toBottomOf="@id/trendsImgHolder"
        android:layout_marginTop="16dp"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/grey_900"/>

    <TextView
        android:id="@+id/trendsDescription"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="Мультсериал"
        app:layout_constraintStart_toStartOf="@id/trendsTitle"
        app:layout_constraintEnd_toEndOf="@id/trendsTitle"
        app:layout_constraintTop_toBottomOf="@id/trendsTitle"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:textColor="@color/grey_400"/>
</androidx.constraintlayout.widget.ConstraintLayout>

