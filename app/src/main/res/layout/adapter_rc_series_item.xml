<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/seriesImgHolder"
        android:layout_width="350dp"
        android:layout_height="180dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/seriesImg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/seriesTitle"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:text="1 -ші бөлім"
        app:layout_constraintStart_toStartOf="@id/seriesImgHolder"
        app:layout_constraintTop_toBottomOf="@id/seriesImgHolder"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:fontFamily="@font/sf_pro_display_bold"
        android:textColor="@color/grey_900"/>

    <ImageView
        android:id="@+id/divider"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/seriesImgHolder"
        app:layout_constraintEnd_toEndOf="@id/seriesImgHolder"
        app:layout_constraintTop_toBottomOf="@id/seriesTitle"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/divider_1dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>